        </FrameLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <RelativeLayout android:layout_gravity="start" android:layout_width="@dimen/npm_width" android:layout_height="match_parent">
        <ImageView android:id="@+id/drawer_bg" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/nav_background" android:scaleType="fitXY" android:contentDescription="@string/id_icon_image_desc" android:alpha="1"/>

            <LinearLayout android:gravity="center" android:layout_gravity="bottom" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/unit_container" android:visibility="gone" android:layout_width="match_parent" android:layout_height="100dp">
                    <View android:id="@+id/Separator" android:layout_marginTop="8dp" android:layout_marginBottom="10dp" app:layout_constraintBottom_toTopOf="@+id/measurement" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0" style="@style/signature_view.Divider"/>
                    <TextView android:textSize="12dp" android:textStyle="bold" android:textColor="@color/npm_nav_list_text_color" android:gravity="center" android:id="@+id/measurement" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/unit_measurements" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/Separator"/>
                    <TextView android:textSize="12dp" android:textColor="@color/npm_nav_list_text_color" android:id="@+id/units_standard" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginBottom="64dp" android:text="@string/unit_standard" android:layout_marginStart="16dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/unit_toggle" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/measurement"/>
                    <Switch android:id="@+id/unit_toggle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/measurement"/>
                    <TextView android:textSize="12dp" android:textColor="@color/npm_nav_list_text_color" android:id="@+id/units_metric" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/unit_metric" android:layout_marginStart="8dp" android:layout_marginEnd="16dp" app:layout_constraintBaseline_toBaselineOf="@+id/units_standard" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toEndOf="@+id/unit_toggle"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <ImageView android:layout_gravity="center" android:id="@+id/logo_bottom" android:paddingTop="@dimen/npm_logo_bottom_portrait_margin_top" android:paddingBottom="@dimen/npm_logo_bottom_portrait_margin_bottom" android:focusable="true" android:clickable="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:contentDescription="@string/id_icon_image_desc" android:paddingStart="@dimen/npm_logo_bottom_portrait_margin_start" android:paddingEnd="@dimen/npm_logo_bottom_portrait_margin_end" app:srcCompat="@drawable/ic_logo_secondary"/>
            </LinearLayout>
        </com.google.android.material.navigation.NavigationView>
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>
